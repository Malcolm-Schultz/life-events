<style type="text/css">
	.slidecontainer {
		width: 100%;
	}

	.slider {
		-webkit-appearance: none;
		width: 100%;
		height: 15px;
		border-radius: 4px;
		background: #f0f0f0;
		outline: none;
		opacity: 0.7;
		-webkit-transition: .2s;
		transition: opacity .2s;
	}

	.slider:hover {
		opacity: 1;
	}

	.slider::-webkit-slider-thumb {
		-webkit-appearance: none;
		appearance: none;
		width: 15px;
		height: 15px;
		border-radius: 4px;
		background: #7fa3bd;
		cursor: pointer;
	}

	.slider::-moz-range-thumb {
		width: 15px;
		height: 15px;
		border-radius: 4px;
		background: #002b49;
		cursor: pointer;
	}
</style>

<div class="small-10 columns">
	<div id="main_section" class="card" style="height: 70vh; margin-bottom: 2vh; margin-top: 2vh; position: relative">
		<div class="row" style="height: 11vh;">
			{{#each (getPages)}}
			<div id="title-{{id}}" class="small-12 columns" style="text-align: center; border-bottom: 3px solid #eeeeee; {{#unless show}}display: none;{{/unless}}">
				<h3 style="line-height: 4rem; font-size: 2rem; color: #002b49; font-weight: 400"> {{title}}</h3>
			</div>
			{{/each}}
		</div>
		<div class="row" style="height: 51vh; ">
			<div id="page" class="small-8 columns" style=" background-color: #ffffff; height: 90%; position: relative ">
				{{#each (getPages)}}
				<div id="{{id}}" style="{{#unless show}}display: none;{{/unless}} position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); ">
					{{#if subtitle}}
					<p style="text-align: center; font-size: 2rem; line-height: 2.5rem ">
						{{subtitle}}
					</p>
					{{/if}}{{#if subtitle2}}
					<p style="text-align: center; font-size: 2rem; line-height: 2.5rem; color:#002b49; ">
						{{subtitle2}}
					</p>
					{{/if}} {{#each questions}} {{#compare type "===" "slider"}}
					<div class="slidecontainer" style="color:#7fa3bd;padding-top:8px;">
						{{placeholder}}
						<input type="range" min="0" max="100" value="15" class="slider" id="{{id}}">
						<p style="text-align:right;" id="retirementMoneySlider">
							<span id="{{id}}-span">15</span>%
						</p>
					</div>
					{{/compare}} {{#compare type "===" "text"}}
					<div class="md-text-field with-floating-label">
						<input type="{{type}}" id="{{id}}" style="width: 24vw;" required></input>
						<label for="{{id}}">{{placeholder}}</label>
					</div>
					{{/compare}} {{#compare type "===" "select-dropdown"}}
					<div class="uitk-select md-text-field with-floating-label" style="margin-top: .5em; width: 24vw">
						<input id="{{id}}" type="text" class="select-input" readonly="true" placeholder="{{placeholder}}" required>
						<span class="select-arrow"></span>
						<ul class="select-dropdown">
							{{#each values}}
							<li id="{{id}}">{{text}}</li>
							{{/each}}
						</ul>
						<label>{{label}}</label>
					</div>
					{{/compare}}{{#compare type "===" "radio"}}
					<div id="{{id}}" class="md-multi-ctrl-field " style="{{#unless show}}display: none;{{/unless}}">
						{{#each values}}
						<input id="{{id}}" name="{{../id}}" type="{{../type}}">
						<label for="{{id}}">{{text}}</label>
						{{/each}}
					</div>
					{{/compare}} {{/each}}
				</div>
				{{/each }}
			</div>
			<div id="info" class="small-4 columns" style="background-color: #ffffff; text-align: center; height: 90%;">
				<div class="" style="background-color: #fff; border-left: 3px solid #eeeeee; margin: 2vh; padding: 2vh; height: 100%;">
					<ul class="keyval-chart key-columns-5 val-columns-7" id="info-table">
						<li class="chart-head">
							<span class="key">Selection</span>
							<span class="val">Value</span>
						</li>
					</ul>
				</div>
			</div>
		</div>